if $DARWIN; then
    function unity_bin()
    {
        local dn bn
        bn='Contents/MacOS/Unity'
        if [ -x "$bn" ]; then
            echo "bn"
            return 0
        fi
        for dn in '.' build/MacEditor /Applications/Unity*; do
            dn+="/Unity.app"
            if [ -d "$dn" ]; then
                echo "${dn}/${bn}"
                return 0
            fi
        done
        echo "Unable to locate Unity binary" >&2
        return 1
    }

    # if last arg is a path, will open it as a project
    function unity()
    {
        local last args=("$@")
        last="${@: -1}"
        if [ -d "$last" ]; then
            [ ${#args[@]} -gt 0 ] && unset args[${#args[@]}-1]
            # unity requires full paths
            last="$(cd "$last" && pwd)"
            # this is how to open more than one unity project
            args+=(-projectpath "$last")
        fi
        local ub="$(unity_bin)"
        echo "${ub} ${args[@]}" >&2
        tailrun "${HOME}/Library/Logs/Unity/Editor.log" "${ub}" "${args[@]}"
    }
fi

function health()
{
    myps unicorn
    ls -ld `readlink /opt/unity/unity-collab-service/current`
    local h="$(curl -sqf -u "build:${BUILD_SERVICE_SECRET}" localhost:8080/api/health)"
    echo "$h"
    eval `echo "$h" | sed -n 's/.*version":"\([^"]*\).*/local version=\1/p'`
    echo -n "${version}  ->"
    (cd /opt/unity/unity-collab-service/current; git branch -r --contains "$version"; git log -n1)
}

function whitelist_check()
{
